<?xml version="1.0" encoding="UTF-8"?>
<project name="articles_pdf" default="articles2pdf" basedir=".">
  <property name="dita.dir" location="${basedir}/../.."/>
  <property name="testdata.dir" location="${dita.dir}/testdata"/>
  <target name="articles2pdf" if="run.pdf" unless="skip.pdf">
    <ant antfile="${dita.dir}/build.xml">
      <property name="args.input" location="${testdata.dir}/articles/DITA-articles.ditamap"/>
      <property name="output.dir" location="${dita.dir}/testresult/articles/pdf"/>
      <property name="transtype" value="pdf"/>
      <property name="dita.temp.dir" location="${dita.dir}/temp/articles/pdf"/>
    </ant>
  </target>
</project>