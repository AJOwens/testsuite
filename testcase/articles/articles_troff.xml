<?xml version="1.0" encoding="UTF-8"?>
<project name="articles_troff" default="articles2troff" basedir=".">
  <property name="dita.dir" location="${basedir}/../.."/>
  <property name="testdata.dir" location="${dita.dir}/testdata"/>
  <target name="articles2troff" if="run.troff">
    <ant antfile="${dita.dir}/build.xml">
      <property name="args.input" location="${testdata.dir}/articles/DITA-articles.ditamap"/>
      <property name="output.dir" location="${dita.dir}/testresult/articles/troff"/>
      <property name="transtype" value="troff"/>
      <property name="dita.temp.dir" location="${dita.dir}/temp/articles/troff"/>
    </ant>
  </target>
</project>