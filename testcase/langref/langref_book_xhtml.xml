<?xml version="1.0" encoding="UTF-8"?>
<project name="langref_xhtml" default="langref2xhtml" basedir=".">
  <property name="dita.dir" value="${basedir}${file.separator}..${file.separator}.."/>
  <property name="testdata.dir" value="${dita.dir}${file.separator}testdata"/>
  <target name="langref2xhtml">
    <ant antfile="${dita.dir}${file.separator}build.xml">
      <property name="args.input"
                location="${testdata.dir}${file.separator}langref${file.separator}ditaref-book.ditamap"/>
      <property name="output.dir"
                location="${dita.dir}${file.separator}testresult${file.separator}langref${file.separator}book${file.separator}xhtml"/>
      <property name="transtype" value="xhtml"/>
      <property name="args.ftr"
                value="${testdata.dir}${file.separator}langref${file.separator}langref-footer.xml"/>
      <property name="dita.temp.dir"
                location="${dita.dir}${file.separator}temp${file.separator}langref${file.separator}book${file.separator}xhtml"/>
    </ant>
  </target>
</project>