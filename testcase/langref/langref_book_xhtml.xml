<?xml version="1.0" encoding="UTF-8"?>
<project name="langref_xhtml" default="langref2xhtml" basedir=".">
   <dirname property="test.basedir" file="${ant.file.langref_xhtml}"/>
   <property name="test.name" value="langref"/>
   <property name="dita.dir" location="${test.basedir}/../.."/>
   <property name="temp.dir" location="${dita.dir}/temp/${test.name}"/>
   <property name="result.dir" location="${dita.dir}/testresult/${test.name}"/>
   <target name="langref2xhtml" if="run.xhtml" unless="skip.xhtml">
      <ant antfile="${dita.dir}/build.xml">
         <property name="args.input" location="${test.basedir}/src/ditaref-book.ditamap"/>
         <property name="output.dir" location="${result.dir}/xhtml"/>
         <property name="transtype" value="xhtml"/>
         <property name="args.ftr" location="${test.basedir}/src/langref-footer.xml"/>
         <property name="dita.temp.dir" location="${temp.dir}/xhtml"/>
      </ant>
   </target>
</project>