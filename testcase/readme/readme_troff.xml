<?xml version="1.0" encoding="UTF-8"?>
<project name="readme_troff" default="readme2troff" basedir=".">
  <property name="dita.dir" value="${basedir}${file.separator}..${file.separator}.."/>
  <property name="testdata.dir" value="${dita.dir}${file.separator}testdata"/>
  <target name="readme2troff">
    <ant antfile="${dita.dir}${file.separator}build.xml">
      <property name="args.input"
                location="${testdata.dir}${file.separator}readme${file.separator}DITA-readme.ditamap"/>
      <property name="output.dir"
                location="${dita.dir}${file.separator}testresult${file.separator}readme${file.separator}troff"/>
      <property name="transtype" value="troff"/>
      <property name="dita.temp.dir"
                location="${dita.dir}${file.separator}temp${file.separator}readme${file.separator}troff"/>
    </ant>
  </target>
</project>