<?xml version="1.0" encoding="UTF-8"?>
<project name="readme_pdf" default="readme2pdf" basedir=".">
  <property name="dita.dir" location="${basedir}/../.."/>
  <property name="testdata.dir" location="${dita.dir}/testdata"/>
  <target name="readme2pdf" if="run.pdf" unless="skip.pdf">
    <ant antfile="${dita.dir}/build.xml">
      <property name="args.input" location="${testdata.dir}/readme/DITA-readme.ditamap"/>
      <property name="output.dir" location="${dita.dir}/testresult/readme/pdf"/>
      <property name="transtype" value="pdf"/>
      <property name="dita.temp.dir" location="${dita.dir}/temp/readme/pdf"/>
    </ant>
  </target>
</project>