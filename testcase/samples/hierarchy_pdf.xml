<?xml version="1.0" encoding="UTF-8"?>
<project name="sample_pdf" default="sample2pdf" basedir=".">
  <property name="dita.dir" location="${basedir}/../.."/>
  <property name="testdata.dir" location="${dita.dir}/testdata"/>
  <target name="sample2pdf" if="run.pdf" unless="skip.pdf">
    <ant antfile="${dita.dir}/build.xml">
      <property name="args.input" location="${testdata.dir}/samples/hierarchy.ditamap"/>
      <property name="output.dir" location="${dita.dir}/testresult/samples/hierarchy/pdf"/>
      <property name="transtype" value="pdf"/>
      <property name="dita.temp.dir" location="${dita.dir}/temp/samples/hierarchy/pdf"/>
    </ant>
  </target>
</project>