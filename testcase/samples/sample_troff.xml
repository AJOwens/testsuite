<?xml version="1.0" encoding="UTF-8"?>
<project name="sample_troff" default="sample2troff" basedir=".">
  <property name="dita.dir" location="${basedir}/../.."/>
  <property name="testdata.dir" location="${dita.dir}/testdata"/>
  <target name="sample2troff" if="run.troff">
    <ant antfile="${dita.dir}/build.xml">
      <property name="args.input" location="${testdata.dir}/samples/sequence.ditamap"/>
      <property name="output.dir" location="${dita.dir}/testresult/samples/sequence/troff"/>
      <property name="transtype" value="troff"/>
      <property name="dita.temp.dir" location="${dita.dir}/temp/samples/sequence/troff"/>
    </ant>
  </target>
</project>