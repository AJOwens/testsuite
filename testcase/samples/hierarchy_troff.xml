<?xml version="1.0" encoding="UTF-8"?>
<project name="sample_troff" default="sample2troff" basedir=".">
   <dirname property="test.basedir" file="${ant.file.sample_troff}"/>
   <property name="test.name" value="samples"/>
   <property name="dita.dir" location="${test.basedir}/../.."/>
   <property name="temp.dir" location="${dita.dir}/temp/${test.name}"/>
   <property name="result.dir" location="${dita.dir}/testresult/${test.name}"/>
   <target name="sample2troff" if="run.troff" unless="skip.troff">
      <ant antfile="${dita.dir}/build.xml">
         <property name="args.input" location="${test.basedir}/src/hierarchy.ditamap"/>
         <property name="output.dir" location="${result.dir}/xhtml"/>
         <property name="transtype" value="troff"/>
         <property name="dita.temp.dir" location="${temp.dir}/xhtml"/>
      </ant>
   </target>
</project>