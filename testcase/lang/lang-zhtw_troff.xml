<?xml version="1.0" encoding="UTF-8"?>
<project name="lang-zhtw_troff" default="lang-zhtw2troff" basedir=".">
  <property name="dita.dir" location="${basedir}/../.."/>
  <property name="testdata.dir" location="${dita.dir}/testdata"/>
  <target name="lang-zhtw2troff" if="run.troff">
    <ant antfile="${dita.dir}/build.xml">
      <property name="args.input" location="${testdata.dir}/OldcasesTest/lang/lang-zhtw.dita"/>
      <property name="dita.temp.dir" location="${dita.dir}/temp/OldcasesTest/lang/zhtw/troff"/>
      <property name="output.dir"
                location="${dita.dir}/testresult/OldcasesTest/lang/zhtw/troff"/>
      <property name="transtype" value="troff"/>
      <property name="dita.input.valfile"
                location="${testdata.dir}/OldcasesTest/lang/lang-ref.ditaval"/>
    </ant>
  </target>
</project>