<?xml version="1.0" encoding="UTF-8" ?>

<project name="lang-bgbg_xhtml" default="lang-bgbg2xhtml" basedir=".">
  
  <!-- dita.dir should point to the toolkit's root directory -->
  <property name="dita.dir" value="${basedir}${file.separator}..${file.separator}.."/>
  <property name="testdata.dir" value="${dita.dir}${file.separator}Testdata"/>
  
  <import file="${dita.dir}${file.separator}integrator.xml"/>
  
  <target name="lang-bgbg2xhtml" depends="integrate">
    <ant antfile="${dita.dir}${file.separator}build.xml" target="init">
      <!-- please refer to the toolkit's document for supported parameters, and 
           specify them base on your needs -->
      <property name="args.input"
        value="${testdata.dir}${file.separator}OldcasesTest${file.separator}lang${file.separator}lang-bgbg.dita"/>
      <property name="dita.temp.dir" value="${dita.dir}${file.separator}temp${file.separator}OldcasesTest${file.separator}lang${file.separator}bgbg${file.separator}xhtml"/>
      <property name="output.dir"
        value="${dita.dir}${file.separator}testresult${file.separator}OldcasesTest${file.separator}lang${file.separator}bgbg${file.separator}xhtml"/>
      <property name="transtype" value="xhtml"/>
      <property name="dita.input.valfile" value="${testdata.dir}${file.separator}OldcasesTest${file.separator}lang${file.separator}lang-ref.ditaval"/>
    </ant>
  </target>
</project>
