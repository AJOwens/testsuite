<?xml version="1.0" encoding="UTF-8"?>
<project name="userguide_pdf" default="userguide2pdf" basedir=".">
  <property name="dita.dir" location="${basedir}/../.."/>
  <property name="testdata.dir" location="${dita.dir}/testdata"/>
  <target name="userguide2pdf" if="run.pdf">
    <ant antfile="${dita.dir}/build.xml">
      <property name="args.input" location="${testdata.dir}/userguide/DITA-userguide.ditamap"/>
      <property name="output.dir" location="${dita.dir}/testresult/userguide/pdf"/>
      <property name="dita.temp.dir" location="${dita.dir}/temp/userguide/pdf"/>
      <property name="transtype" value="pdf"/>
    </ant>
  </target>
</project>