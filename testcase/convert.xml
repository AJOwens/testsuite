<?xml version="1.0" encoding="UTF-8"?>
<project name="Testcase converter" default="convert">
  
  <target name="convert">
    <xslt style="convert.xsl" basedir="${basedir}" destdir="${basedir}" includes="*/build.xml" extension=".new.xml"
     filedirparameter="dir"/>
    <move todir="${basedir}">
      <fileset dir="${basedir}">
        <include name="*/*.new.xml"/> 
      </fileset>
      <mapper type="glob" from="*.new.xml" to="*.xml"/>
    </move>
  </target>
  
</project>